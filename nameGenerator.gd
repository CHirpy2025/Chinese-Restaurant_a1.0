# --- 核心生成函数 ---

# 生成一个厨师姓名
# gender: 可以是 "male", "female", 或 "random"
# easter_egg_chance: 触发彩蛋的概率，默认为 5% (0.05)
static func _generate_random_name(gender: String) -> String:
	var surname = surnames[randi() % surnames.size()]
	var given_name = ""
	
	if gender == "male":
		given_name = male_given_names[randi() % male_given_names.size()]
	else:
		given_name = female_given_names[randi() % female_given_names.size()]
	
	# 10%概率添加前缀
	if randf() < 0.1:
		var prefix = name_suffixes[randi() % name_suffixes.size()]
		if prefix != "":
			return prefix + surname + given_name
	
	return surname + given_name
